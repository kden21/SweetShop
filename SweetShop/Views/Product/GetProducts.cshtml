@model List<SweetShop.Domain.Product>

@{
	ViewBag.Title = "title";
	Layout = "_Layout";
}    


@if (Model.Count == 0){
<h1 class="h1Text-index">Вкусняшки закончились :(</h1>
}
else{
	@foreach (var product in Model){
		<div>
			<div class="card-product">
				<div class="card-img">
				<a asp-controller="Product" asp-action="GetProduct" asp-route-id="@product.Id"><img class="img-product" src="https://mdshow.ru/pictures/product/middle/6939_middle.jpg"/></a>
				</div>
				<div class="card-prod-features">
					<p class="text-product">@product.Name</p>
				</div>
				<p class="text-product-price">@product.Price ₽</p>
				<div>
				    <label asp-for="@product.CartProductItems.Count"></label><br />
				    <input asp-for="@product.CartProductItems.Count" />
				    <p><span class="input-validatoin-text" asp-validation-for="@product.CartProductItems.Count"></span></p>
				</div>
				<a type="submit" asp-controller="CartProductsItem" asp-action="Create" asp-route-entityProduct="@product.Id" asp-route-count="2" asp-route-cartProductsId="1"><img class="img-shopping-cart" src="https://avatanplus.com/files/resources/original/5ed9e94e590e117283375a1d.png"/></a>
				</div>
		</div>
	}
}